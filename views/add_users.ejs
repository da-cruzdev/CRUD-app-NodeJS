<%- include("layout/header") %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-primary">
          <h3 class="text-light">Add new user</h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/add"
            method="post"
            id="add-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                class="form-control form-control-lg"
                placeholder="Enter name"
                value="<%= typeof formData !== 'undefined' ? formData.name : '' %>"
              />
              <% if (typeof errors !== 'undefined' && errors.length > 0) { %> <%
              for(let i=0; i < errors.length; i++) { %> <% if(errors[i].param
              === 'name') { %>
              <div class="invalid-feedback d-block"><%= errors[i].msg %></div>
              <% } %> <% } %> <% } %>
            </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input
                type="text"
                name="email"
                class="form-control form-control-lg"
                placeholder="Enter email"
                value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
              />
              <% if (typeof errors !== 'undefined' && errors.length > 0) { %> <%
              for(let i=0; i < errors.length; i++) { %> <% if(errors[i].param
              === 'email') { %>
              <div class="invalid-feedback d-block"><%= errors[i].msg %></div>
              <% } %> <% } %> <% } %>
            </div>
            <div class="mb-3">
              <label for="phone">Phone</label>
              <input
                type="tel"
                name="phone"
                class="form-control form-control-lg"
                placeholder="Enter phone"
                value="<%= typeof formData !== 'undefined' ? formData.phone : '' %>"
              />
              <% if (typeof errors !== 'undefined' && errors.length > 0) { %> <%
              for(let i=0; i < errors.length; i++) { %> <% if(errors[i].param
              === 'phone') { %>
              <div class="invalid-feedback d-block"><%= errors[i].msg %></div>
              <% } %> <% } %> <% } %>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Select image</label>
              <input
                type="file"
                name="image"
                class="form-control form-control-lg"
                value="<%= typeof formData !== 'undefined' ? formData.image : '' %>"
              />
              <% if (typeof errors !== 'undefined' && errors.length > 0) { %> <%
              for(let i=0; i < errors.length; i++) { %> <% if(errors[i].param
              === 'image') { %>
              <div class="invalid-feedback d-block"><%= errors[i].msg %></div>
              <% } %> <% } %> <% } %>
            </div>
            <div class="mb-3 d-grid">
              <input
                type="submit"
                name="submit"
                value="Add user"
                class="btn btn-primary btn-lg"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer") %>
